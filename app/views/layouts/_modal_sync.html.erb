<div class="modal fade" id="sync" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".sync_data" %></h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= tms_synchronize_button %>
          <span class="space"><%= t ".refresh_now" %></span>
        </div>
        <% if user_signed_in? %>
          <%= form_tag user_path(current_user.id), method: :PATCH do %>
            <div class="form-group">
              <%= hidden_field_tag :auto_synchronize, false %>
              <label class="switch" id="auto_sync">
                <%= check_box_tag :auto_synchronize, true, current_user.auto_synchronize %>
                <span class="slider round"></span>
              </label>
              <span class="space"><%= t ".want_to_sync" %></span>
              <%= submit_tag t(".save"), class: "btn btn-primary" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
