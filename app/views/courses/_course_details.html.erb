<div class="right_col" role="main">
  <div class="page-title">
    <div class="title_left">
      <ol class="breadcrumb-arrow">
        <li><%= link_to t(".courses"), user_path(user) %></li>
        <li><%= link_to course.name, "#" %></li>
      </ol>
    </div>

    <div class="course-subject">
      <div class="image-course">
        <img src="<%= check_language course %>">
      </div>
      <div class="course-header">
        <div>
          <span class="title_course"><%= course.name %></span>
          <span class="status"><%= course.status %></span>
        </div>
        <div class="date">
          <% if course.start_date? && course.end_date? %>
            <span>
              <%= l course.start_date, format: :format_date_eng %> ~
              <%= l course.end_date, format: :format_date_eng %>
            </span>
          <% end %>
        </div>
      </div>
    </div>

    <h4><%= t ".subjects" %><%= course.name %></h4>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
          </div>
          <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= t ".name" %></th>
                  <th><%= t ".status" %></th>
                  <th><%= t ".start_date" %></th>
                  <th><%= t ".end_date" %></th>
                </tr>
              </thead>
              <tbody>
                <% subjects.each do |course_subject| %>
                  <%= render "subjects/subject", course_subject: course_subject,
                    user: user, course: course %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
